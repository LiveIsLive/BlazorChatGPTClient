@page "/fetchdata";

@inject IDialogService DialogService;


<EditForm Model="@Persons" OnValidSubmit="Send">
	@foreach(Person person in Persons)
	{
		<MudTextField @bind-Value="person.Name" Class="flex-1 ml-2" For="@(()=>person.Name)" />
	}
	<MudIconButton ButtonType="ButtonType.Submit" Color="Color.Primary" Icon="@Icons.Material.Filled.Send" />
</EditForm>


@code {
	class Person
	{
		[System.ComponentModel.DataAnnotations.Required]
		public string Name { get; set; } = null!;
	}

	Person[] Persons = new Person[]
	{
		new Person(),new Person()
	};

	void Send()
	{
		this.DialogService.ShowMessageBox("Error","Pass！");
	}
}