<MudButton OnClick="Add" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary">@Text</MudButton>

@for(int i=0;i<this.List.Count;i++)
{
	int index = i;
	<div class="d-flex">
		<MudTextField T="string" Text="@List[index]" TextChanged="v=>this.List[index]=v" Class="flex-1" />
		<MudIconButton OnClick="()=>this.Remove(index)" Icon="@Icons.Material.Filled.Delete"></MudIconButton>
	</div>
}

@code {
	[Parameter]
	public string Text { get; set; } = null!;

	[Parameter]
	public System.Collections.Generic.IList<string> List { get; set; } = null!;

	public void Add()
	{
		this.List.Add("");
	}

	public void Remove(int index)
	{
		this.List.RemoveAt(index);
		//this.StateHasChanged();
	}
}